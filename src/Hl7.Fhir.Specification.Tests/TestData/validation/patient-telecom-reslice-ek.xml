<?xml version="1.0" encoding="utf-8"?>
<StructureDefinition xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://hl7.org/fhir">
  <url value="http://example.com/StructureDefinition/patient-telecom-reslice-ek" />
  <version value="1.0" />
  <name value="patient-telecom-slice" />
  <status value="draft" />
  <description value="Slice Patient.telecom by multiple discriminators - based on an example by Chris Grenz." />
  <fhirVersion value="1.0.2" />
  <kind value="resource" />
  <abstract value="false" />
  <type value="Patient" />
  <baseDefinition value="http://hl7.org/fhir/StructureDefinition/Patient" />
  <derivation value="constraint" />
  <differential>
    <element>
      <path value="Patient.telecom" />
      <slicing>
        <!-- NB: discriminator-less matching -->
        <ordered value="true" />
        <rules value="openAtEnd" />
      </slicing>
      <min value="1" />
      <max value="5" />
    </element>
    <!-- First, slice into PHONE -->
    <element>
      <path value="Patient.telecom" />
      <sliceName value="phone" />
      <min value="1" />
      <max value="2" />
    </element>
    <element>
      <path value="Patient.telecom.system" />
      <min value="1" />
      <fixedCode value="phone" />
    </element>
    <!-- Now, the emails. A slice with Email, re-sliced to account for use -->
    <element>
      <path value="Patient.telecom" />
      <sliceName value="email" />
      <slicing>
        <discriminator>
          <type value="value" />
          <path value="system" />
        </discriminator>
        <discriminator>
          <type value="value" />
          <path value="use" />
        </discriminator>
        <rules value="closed" />
      </slicing>
      <min value="0" />
      <max value="1" />
    </element>
    <element>
      <path value="Patient.telecom.system" />
      <min value="1" />
      <fixedCode value="email" />
    </element>
    <!-- A re-slice for Email + home -->
    <element>
      <path value="Patient.telecom" />
      <sliceName value="email/home" />
      <min value="0" />
      <max value="1" />
    </element>
    <element>
      <path value="Patient.telecom.system" />
      <min value="1" />
      <fixedCode value="email" />
    </element>
    <element>
      <path value="Patient.telecom.use" />
      <min value="1" />
      <fixedCode value="home" />
    </element>
    <!-- A re-slice for Email + work -->
    <element>
      <path value="Patient.telecom" />
      <sliceName value="email/work" />
      <min value="0" />
      <max value="1" />
    </element>
    <element>
      <path value="Patient.telecom.system" />
      <min value="1" />
      <fixedCode value="email" />
    </element>
    <element>
      <path value="Patient.telecom.use" />
      <min value="1" />
      <fixedCode value="work" />
    </element>
    <!-- Finally, other -->
    <element>
      <path value="Patient.telecom" />
      <sliceName value="other" />
      <slicing>
        <discriminator>
          <type value="value" />
          <path value="system" />
        </discriminator>
        <discriminator>
          <type value="value" />
          <path value="use" />
        </discriminator>
        <rules value="open" />
      </slicing>
      <min value="0" />
      <max value="3" />
    </element>
    <element>
      <path value="Patient.telecom.system" />
      <min value="1" />
      <fixedCode value="other" />
    </element>
    <!-- A re-slice for other + home -->
    <element>
      <path value="Patient.telecom" />
      <sliceName value="other/home" />
      <min value="0" />
      <max value="1" />
    </element>
    <element>
      <path value="Patient.telecom.system" />
      <min value="1" />
      <fixedCode value="other" />
    </element>
    <element>
      <path value="Patient.telecom.use" />
      <min value="1" />
      <fixedCode value="home" />
    </element>
    <!-- A re-slice for other + work -->
    <element>
      <path value="Patient.telecom" />
      <sliceName value="other/work" />
      <min value="0" />
      <max value="1" />
    </element>
    <element>
      <path value="Patient.telecom.system" />
      <min value="1" />
      <fixedCode value="other" />
    </element>
    <element>
      <path value="Patient.telecom.use" />
      <min value="1" />
      <fixedCode value="work" />
    </element>
  </differential>
</StructureDefinition>